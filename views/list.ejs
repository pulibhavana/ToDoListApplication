<%- include("header") -%>
<div class = "box" id = "heading">
    <h1><%= titleList %> </h1>
</div>

<div class = "box" id = >
    <% newListItem.forEach((element) =>{ %>
        <div class = "item">
        <form action = "/delete" method = "post">
             <input type="checkbox" name = "id" value = <%= element._id %> onChange = "this.form.submit()">
             <input type="hidden" name = "listName" value = "<%= titleList %>" >
         </form>
         <form action = "/update" method = "post">
             <input type = "text" name = "taskName" value = "<%= element.name %>" onChange = "this.form.submit()">
             <input type = "hidden" name = "textId" value = "<%= element._id %>">
             <input type="hidden" name = "list" value = "<%= titleList %>" >
         </form>
        </div>
    <% }) %>
            <form class = "item" action = "/" method = "post">
                <input type = "text" name = "newItem" placeholder = "newItem" autocomplete = "off">
                <button type = "submit" name = "title" value = "<%= titleList %>" >+</button>
            </form>
        </div>

